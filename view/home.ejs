<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Titli - Elegant Link Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .gradient-bg {
            background: linear-gradient(135deg, #1e3a8a, #3b0764);
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .animation-delay-2000 {
            animation-delay: 2s;
        }
        .animation-delay-4000 {
            animation-delay: 4s;
        }
        @keyframes blob {
            0% {
                transform: translate(0px, 0px) scale(1);
            }
            33% {
                transform: translate(30px, -50px) scale(1.1);
            }
            66% {
                transform: translate(-20px, 20px) scale(0.9);
            }
            100% {
                transform: translate(0px, 0px) scale(1);
            }
        }
    </style>
</head>
<body class="gradient-bg text-white overflow-x-hidden">

    <!-- Header -->
    <header class="absolute top-0 left-0 w-full z-10 p-6">
        <nav class="container mx-auto flex justify-between items-center">
            <div class="text-3xl font-bold tracking-wider logo">
                Titli ü¶ã
            </div>
            <div class="hidden md:flex space-x-8 nav-links">
                <a href="#features" class="hover:text-cyan-300 transition-colors">Features</a>
                <a href="#how-it-works" class="hover:text-cyan-300 transition-colors">How It Works</a>
                <a href="#" class="bg-cyan-500 hover:bg-cyan-400 text-white font-bold py-2 px-4 rounded-full transition-all">Sign Up</a>
            </div>
        </nav>
    </header>

    <main>
        <!-- Hero Section -->
        <section class="min-h-screen flex items-center justify-center p-6 relative overflow-hidden">
            <div class="absolute inset-0 opacity-10">
                <!-- Decorative background shapes -->
                <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-purple-500 rounded-full mix-blend-screen filter blur-xl animate-[blob_7s_infinite]"></div>
                <div class="absolute top-1/2 right-1/4 w-64 h-64 bg-cyan-500 rounded-full mix-blend-screen filter blur-xl animate-[blob_7s_infinite] animation-delay-2000"></div>
                <div class="absolute bottom-1/4 left-1/3 w-64 h-64 bg-indigo-500 rounded-full mix-blend-screen filter blur-xl animate-[blob_7s_infinite] animation-delay-4000"></div>
            </div>

            <div class="container mx-auto text-center z-10">
                <h1 class="text-5xl md:text-7xl font-bold mb-4 hero-title">Shorten Links, <br> Let Your Ideas Fly.</h1>
                <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-2xl mx-auto hero-subtitle">
                    Titli is a simple and elegant link shortener for creators. Transform your long, messy links into memorable short ones.
                </p>

                <form action="/shorten" method="POST" class="max-w-2xl mx-auto glass-card rounded-full p-2 flex items-center shadow-lg hero-form">
                    <input 
                        type="url" 
                        name="redirectUrl"
                        placeholder="https://your-super-long-link.com/to-shorten" 
                        class="w-full bg-transparent text-white placeholder-gray-400 border-none focus:ring-0 py-3 px-6 text-lg"
                        required
                    >
                    <button type="submit" class="bg-cyan-500 hover:bg-cyan-400 text-white font-bold py-3 px-8 rounded-full transition-all text-lg flex-shrink-0">
                        Shorten
                    </button>
                </form>

                <% if (locals.shortUrl) { %>
                    <div class="mt-8 glass-card rounded-lg p-4 max-w-xl mx-auto">
                        <p class="text-lg">Your short link is ready: 
                            <a href="<%= shortUrl %>" target="_blank" class="font-bold text-cyan-300 hover:text-cyan-200"><%= shortUrl %></a>
                        </p>
                    </div>
                <% } %>
        
                <% if (locals.error) { %>
                    <div class="mt-8 bg-red-500/20 border border-red-500 text-red-300 rounded-lg p-4 max-w-xl mx-auto">
                        <p><%= error %></p>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Features Section -->
        <section id="features" class="py-20 px-6">
            <div class="container mx-auto text-center">
                <h2 class="text-4xl font-bold mb-2 section-title">Powerful Features, Simple Interface</h2>
                <p class="text-gray-300 mb-12 max-w-xl mx-auto section-subtitle">Everything you need to make your links perform better.</p>

                <div class="grid md:grid-cols-3 gap-8">
                    <!-- Feature 1 -->
                    <div class="glass-card p-8 rounded-2xl feature-card">
                        <div class="text-4xl mb-4">‚ú®</div>
                        <h3 class="text-2xl font-bold mb-2">Custom Links</h3>
                        <p class="text-gray-300">Create branded, memorable links that increase click-through rates and build trust with your audience.</p>
                    </div>
                    <!-- Feature 2 -->
                    <div class="glass-card p-8 rounded-2xl feature-card">
                        <div class="text-4xl mb-4">üìä</div>
                        <h3 class="text-2xl font-bold mb-2">Detailed Analytics</h3>
                        <p class="text-gray-300">Track every click and measure your campaign's performance with our easy-to-understand analytics dashboard.</p>
                    </div>
                    <!-- Feature 3 -->
                    <div class="glass-card p-8 rounded-2xl feature-card">
                        <div class="text-4xl mb-4">üöÄ</div>
                        <h3 class="text-2xl font-bold mb-2">Fast & Reliable</h3>
                        <p class="text-gray-300">Our global infrastructure ensures your links are redirected quickly and reliably, every single time.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- How It Works Section -->
        <section id="how-it-works" class="py-20 px-6">
            <div class="container mx-auto text-center">
                <h2 class="text-4xl font-bold mb-12 section-title">Get Started in Seconds</h2>
                <div class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-16">
                    <!-- Step 1 -->
                    <div class="flex items-center flex-col text-center step">
                        <div class="w-24 h-24 rounded-full glass-card flex items-center justify-center text-4xl font-bold border-2 border-cyan-400 mb-4">1</div>
                        <h3 class="text-xl font-semibold">Paste Your URL</h3>
                        <p class="text-gray-400 max-w-xs">Simply paste your long link into the input field.</p>
                    </div>
                    <!-- Step 2 -->
                    <div class="flex items-center flex-col text-center step">
                        <div class="w-24 h-24 rounded-full glass-card flex items-center justify-center text-4xl font-bold border-2 border-cyan-400 mb-4">2</div>
                        <h3 class="text-xl font-semibold">Shorten It</h3>
                        <p class="text-gray-400 max-w-xs">Click the button and let our magic create a short link.</p>
                    </div>
                    <!-- Step 3 -->
                    <div class="flex items-center flex-col text-center step">
                        <div class="w-24 h-24 rounded-full glass-card flex items-center justify-center text-4xl font-bold border-2 border-cyan-400 mb-4">3</div>
                        <h3 class="text-xl font-semibold">Share It</h3>
                        <p class="text-gray-400 max-w-xs">Copy your new short link and share it with the world.</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="py-10 px-6 border-t border-white/10">
        <div class="container mx-auto text-center text-gray-400">
            <p>&copy; 2024 Titli. All Rights Reserved.</p>
            <p class="mt-2">Designed with ‚ù§Ô∏è for beautiful links.</p>
        </div>
    </footer>

    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

    <script>
        gsap.registerPlugin(ScrollTrigger);

        // --- HERO ANIMATIONS ---
        const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

        tl.from(".logo", { opacity: 0, y: -30, duration: 0.8, delay: 0.2 });
        tl.from(".nav-links > a", { opacity: 0, y: -30, duration: 0.5, stagger: 0.2 }, "-=0.5");
        tl.from(".hero-title", { opacity: 0, y: 50, duration: 1 }, "-=0.6");
        tl.from(".hero-subtitle", { opacity: 0, y: 40, duration: 0.8 }, "-=0.7");
        tl.from(".hero-form", { opacity: 0, y: 30, duration: 0.8 }, "-=0.6");

        // --- SCROLL-TRIGGERED ANIMATIONS ---

        // Animate Section Titles on scroll
        gsap.utils.toArray('.section-title').forEach(title => {
            gsap.from(title, {
                opacity: 0,
                y: 50,
                duration: 0.8,
                scrollTrigger: {
                    trigger: title,
                    start: "top 85%",
                    toggleActions: "play none none none"
                }
            });
        });

        gsap.utils.toArray('.section-subtitle').forEach(subtitle => {
            gsap.from(subtitle, {
                opacity: 0,
                y: 40,
                duration: 0.8,
                delay: 0.2,
                scrollTrigger: {
                    trigger: subtitle,
                    start: "top 90%",
                    toggleActions: "play none none none"
                }
            });
        });

        // Animate Feature Cards
        gsap.utils.toArray('.feature-card').forEach((card, i) => {
            gsap.from(card, {
                opacity: 0,
                scale: 0.9,
                y: 60,
                duration: 0.6,
                delay: i * 0.15,
                scrollTrigger: {
                    trigger: card,
                    start: "top 85%",
                    toggleActions: "play none none none"
                }
            });
        });

        // Animate "How it works" steps
        gsap.utils.toArray('.step').forEach((step, i) => {
            gsap.from(step, {
                opacity: 0,
                y: 50,
                duration: 0.5,
                delay: i * 0.2,
                scrollTrigger: {
                    trigger: ".step",
                    start: "top 85%",
                    toggleActions: "play none none none"
                }
            });
        });

    </script>

</body>
</html>
